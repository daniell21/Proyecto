<p id="notice"><%= notice %></p>

<h1>Tarifas</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Monto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @constants.each do |constant| %>
      <tr>
        <td><%= constant.name %></td>
        <td><%= constant.amount %></td>
        <td><%= link_to 'Mostrar', constant %></td>
        <td><%= link_to 'Atrás', edit_constant_path(constant) %></td>
        <td><%= link_to 'Eliminar', constant, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

