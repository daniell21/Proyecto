<p id="notice"><%= notice %></p>

<h1>Tarifas</h1>

<table>
  <thead> 
    <tr>
      <th>MMensualidad</th>
      <th>Instalación</th>
      <th>Mensualidad e Instalación</th>
      <th>Reactivationpayment</th>
      <th>Impuesto</th>
      <th colspan="3"></th>
    </tr> 
  </thead>

  <tbody>
    <% @constants.each do |constant| %>
      <tr>
        <td><%= constant.monthlyPayment %></td>
        <td><%= constant.installPayment %></td>
        <td><%= constant.completePayment %></td>
        <td><%= constant.reactivationPayment %></td>
        <td><%= constant.tax %></td>
        <td><%= link_to 'Mostrar', constant, :class => 'btn btn-success btn'   %></td>
        <td><%= link_to 'Editar', edit_constant_path(constant), :class => 'btn btn-warning btn'   %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div ALIGN=right>
  <%= link_to 'Crear Nuevas Tarias', new_constant_path, :class => 'btn btn-default btn'   %>
</div>
