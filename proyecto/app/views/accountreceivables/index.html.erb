<div ALIGN=center>
<p id="notice"><%= notice %></p>

<h1>Cuentas por Cobrar</h1>
<%= form_tag import_accountreceivables_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Importar" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Descripcion</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accountreceivables.each do |accountreceivable| %>
      <tr>
        <td><%= accountreceivable.client.name %></td>
        <td><%= accountreceivable.descripcion %></td>
        <td><%= accountreceivable.total %></td>
        <td><%= link_to 'Mostrar', accountreceivable %></td>
        <td><%= link_to 'Editar', edit_accountreceivable_path(accountreceivable) %></td>
        <td><%= link_to 'Eliminar', accountreceivable, method: :delete, data: { confirm: '¿Estas Seguro?' } %></td>
      </tr>
    <% end %>
    <%if @accountreceivables.size == 0%>
         <td>No Hay Cuentas por Cobrar</td>
      <%end%>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Cuenta', new_accountreceivable_path %>
<%= link_to 'Menú Principal', controller: 'principal' %>
</div>
