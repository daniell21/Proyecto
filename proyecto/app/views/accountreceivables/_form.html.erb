  <%= simple_form_for(@accountreceivable) do |f| %>
       
          <br>
          <div align="center">
          <div class="row">
             <div class="col-xs-12">
              <div class="field">
                <%= f.input :document, as: :file, label: false, :class => 'btn btn-default btn' %>

              </div>
          </div>
            
          </div>
          <br>
          <br>
          <!--Esto debe acomodarse-->
          <div class="row">
            <div class="col-xs-6">
              
              <%= f.association :client, label: "Cliente", 
                  include_blank: "Seleccionar Cliente", error: "Debe seleccionar un Ciente"  %>

            </div>
            <div class="col-xs-6">
              <%= f.input :date, label: "Fecha Pago"%>
            </div>
           
            
          </div>
          <br>
          <br>
          <%if (current_user.role != "client") %>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :concept, presence: true, :collection => [['Mensualidad','mensualidad'],['Instalación','instalacion'],['Instalación y Mensualidad','instalacionMensualidad'],['Reactivación','reactivacion']], label: "Concepto Cuenta",
                    include_blank: "Seleccionar Concepto ", error: 'Debe ingresar el concepto de la Cuenta' %>
              </div>

              

              <div class="col-md-6"> 
                  <%= f.input :status, :collection => [['Facturada','facturada'],['Anulada','anulada'],['Incobrable','incobrable']], label: "Status Cuenta",
                    include_blank: "Seleccionar Status ", error: 'Debe seleccionar el Status de la Cuenta' %>
              </div>
            </div>
            <br>
            <br>
            <%end%>
          <div class="row">
            <div class="col-md-6">
                  <%= f.input :paymentType, :collection => [['Transferencia','transferencia'],['Deposito','deposito']], label: "Tipo de Pago", 
                  include_blank: "Seleccionar Tipo",error: 'Debe seleccionar el tipo de pago' %>
            </div>
            

              <div class="col-md-6"> 
              <%= f.input :amountPaid,  as: :string, placeholder: 'Monto Pagado', label: "Monto Pagado", error: 'Debe ser Numérico'%>
              </div> 
            
        
            
          </div>
          <br>
          <br>
          <div class="row">
            <div class="col-md-6">
                <%= f.input :month, :collection => [['enero','enero'],['febrero','febrero'],['marzo','marzo'],['abril','abril'],['mayo','mayo'],['junio','junio'],['julio','julio'],['agosto','agosto'],['septiembre','septiembre'],['octubre','octubre'],['noviembre','noviembre'],['diciembre','diciembre']], label: "Mes a Pagar ", 
                  include_blank: "Seleccionar Mes",error: 'Debe seleccionar el mes de pago' %>
            </div>  
            <div class="col-md-6"> 
              <%= f.input :bank, :collection => [["100%BANCO",'100%banco'],['Mercantil','mercantil'],['Banco Provincial','provincial'],['Banesco','banesco'],['Banco Banplus','banplus'],['Banco Bicentenario','bicentenario']], label: 'Banco', 
                  include_blank: "Seleccionar Banco" %>
            </div>
            
          </div>
         
          <br>
          <br>
          <div class="row">


          <div class="col-md-6"> 
                <%= f.input :paymentComment, placeholder: 'Agregar Comentarios', label: 'Comentarios' %>
            </div>
            
          
          <%if (current_user.role != "client") %>
            <div class="col-md-6"> 
                <%= f.input :transferNumber,  as: :string, placeholder: 'Nro Mercantil', label: "Número Transferencia", error: 'Debe ser Númerico' %>
            </div>
          <%end%>
          </div>
          <br>
          <br>
          <%if (current_user.role != "client") %>
            <div class="row">
              
              <div class="col-md-6"> 
                <%= f.input :profitCode, placeholder: 'Código Profit', label: "Número Control Profit"%>
              </div> 


              <div class="col-md-6">  
                  <%= f.input :profitNumber, placeholder: 'Número  Profit', label: "Número Factura Profit"%>
              </div>
              
            </div>
          <%end%>
          <br>
          <br>  
          <%if (current_user.role != "client") %>
            <div class="row">
              <div class="col-md-6">
                <%= f.input :paid, :collection => [['Si','si'],['No','no']], label: "Cuenta Pagada",
                include_blank: "Seleccionar",error: 'Debe indicar si la factura fue pagada o no' %>
              </div>
              

            </div>
            <br>
            <br>
            <%end%>
<div ALIGN=right>
        <div class="actions">
        <%if current_user.role != "client"%>
        <%= f.button :submit, "Crear Cuenta", data: { confirm: '¿Estas Seguro?' }  %>
          <%= link_to 'Atrás', accountreceivables_path, :class => 'btn btn-default btn' %>
          <%else%>
          <%= f.button :submit, "Crear Cuenta"%>
          <%= link_to 'Atrás', accountreceivables_path, :class => 'btn btn-default btn'  %>
          <%end%>


        </div>
</div>
<br>

  <% end %>