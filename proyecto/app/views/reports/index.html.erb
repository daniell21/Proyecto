<h1>Informes</h1>

 
    
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Gráfico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= report.chart %></td>
        <td><%= link_to 'Mostrar', report, :class => 'btn btn-success btn' %></td>
        <td><%= link_to 'Editar', edit_report_path(report), :class => 'btn btn-warning btn' %></td>
        <td><%= link_to 'Eliminar', report, method: :delete, data: { confirm: 'Estás Seguro?' }, :class => 'btn btn-danger btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<div align="right">
  <%= link_to 'Crear Informe', new_report_path, :class => 'btn btn-default btn'  %>
  </div>
