<h1>Informes</h1>

 
    
<table class="table table-striped table-hover">
 
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Gráfico</th>
      <th colspan="3"></th>
    </tr>
 

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= report.chart %></td>
        <td> <%= link_to image_tag('/assets/showeye.ico'), report %></td>
        <td><%= link_to image_tag('/assets/pencil.ico'), edit_report_path(report) %></td>
        <td><%= link_to image_tag('/assets/delete.ico'), report, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>

<div align="right">
  <%= link_to 'Crear Informe', new_report_path, :class => 'btn btn-default btn'  %>
  </div>
