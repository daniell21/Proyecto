<h1>Descuentos</h1>

  

    <div ng-class="row">
      <div class="col-xs-6">
            <!--Busqueda de clientes por nombre-->
            <%= hidden_field_tag :direction, params[:search]%>
            <%= hidden_field_tag :sort, params[:sort]%>
            <label>Nombre</label>
            <%= form_tag discounts_path, :method => 'get' do %>
              <p>
                <%= text_field_tag :search, params[:search], class: 'form-control'  %>
                <%= submit_tag "Buscar Descuento", :name => nil, :class => 'btn btn-default btn'   %>
              </p>
            <% end %>
            <!--<p><%= link_to "Busqueda Avanzada", new_search_discount_path %></p> -->
      </div>    
    </div> 
    
<table class="table table-striped table-hover">

    <tr>
      <th><%= sortable "name", "Nombre"%></th>
      <th><%= sortable "percentage", "Porcentaje"%></th>
      <th colspan="3"></th>
    </tr>


  <tbody>
    <% @discounts.each do |discount| %>
      <tr>
        <td><%= discount.name %></td>
        <td> <%= number_to_currency(discount.percentage, unit: "", separator: ",", delimiter: ".", precision: 2)%></td>
        <td> <%= link_to image_tag('/assets/showeye.ico'), discount %></td>
       <td><%= link_to image_tag('/assets/pencil.ico'), edit_discount_path(discount) %></td>
        <td><%= link_to image_tag('/assets/delete.ico'), discount, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div align="center">
<%= will_paginate %>
</div>
<br>

<div align="right">
  <%= link_to 'Nuevo Descuento', new_discount_path, :class => 'btn btn-default btn'  %>
  </div>
  
