
<%= simple_form_for(@discount) do |f| %>
   <%= f.error_notification %>
    
  <div class="row">
    <div class="col-md-6">
      <%= f.input :name, placeholder: 'Nombre', label: 'Nombre', error: 'Debe ingresar el nombre del Descuento '  %>
    </div>
 
    <div class="col-md-6">
      <%= f.input :percentage,  as: :string, placeholder: 'Porcentaje', label: 'Porcentaje', error: 'Este campo debe ser numérico' %>
    </div>
    
  </div>
  <br>
  <br>
  <div ALIGN=right>
    <div class="actions">
      <%= f.button :submit, "Crear Descuento", :confirm => '123' %>  
      <%= link_to 'Atrás', discounts_path, :class => 'btn btn-default btn'  %>
    </div>
  </div>
<% end %>
