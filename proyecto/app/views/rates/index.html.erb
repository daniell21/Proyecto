<h1>Tarifas</h1>

  
 <p id="notice"><%= notice %></p>
   
    
<table class="table table-striped table-hover">

    <tr>
      <th>Nombre</th>
      <th>Monto </th>
      <th colspan="3"></th>
    </tr>


  <tbody>
    <% @rates.each do |rate| %>
      <tr>
      
        <td><%= rate.name %></td>
        <td><%= number_to_currency(rate.amount, unit: "", separator: ",", delimiter: ".", precision: 2)%></td>
        <td> <%= link_to image_tag('/assets/showeye.ico'), rate %></td>
        <td><%= link_to image_tag('/assets/pencil.ico'), edit_rate_path(rate) %></td>
       
        <td><%= link_to image_tag('/assets/delete.ico'), rate, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
   
      </tr>
    <% end %>
  </tbody>
</table>


