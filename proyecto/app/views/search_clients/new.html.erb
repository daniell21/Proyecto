<h1>Busqueda Avanzada</h1>
<%= simple_form_for(@search_client) do |f| %>

	<div class="row">
    	<div class="col-xs-6">
          <%= f.input :rif, placeholder: 'RIF', label: 'RIF', error: 'El RIF debe ser Numérico (9 digitos)'%>
        </div>
	
        <div class="col-xs-6">
            <%= f.input :profitCode, placeholder: 'Código Profit', label: 'Código Profit', error: 'El Código debe ser Numérico (6 digitos)'%>
        </div>
	</div>
	<br>
	<br>
	<div class="row">
		<div class="col-xs-6">
          <%= f.input :keywords, placeholder: 'Nombre', label: 'Nombre', error: 'Debe ingresar el nombre del Cliente' %>
        </div>
	
        <div class="col-xs-6">
			<%=f.input :email, label: "Correo"%>
		</div>
	</div>
	<br>
	<br>
	<div class="row">
    	<div class="col-xs-6">
			
			<%= f.input :specialcontributor,  label: "Contribuyente Especial"%>
		</div>
	
        <div class="col-xs-6">
          <%= f.input :state, placeholder: 'Estado', label: 'Estado', error: 'Debe ingresar el Estado del Cliente' %>
        </div>
	</div>
	<br>
	<br>
	<div class="row">
    	 <div class="col-xs-6">
            <%= f.input :socialReason, placeholder: 'Razón Social', label: 'Razón Social', error: 'Debe ingresar la Razón Social del Cliente' %>
        </div>
	
	</div>
	
	<div ALIGN=right>  
    <br>
	<%= f.button :submit, "Buscar Cliente"%>  
	<%= link_to 'Atrás', clients_path, :class => 'btn btn-default btn'  %>
	</div>
<%end%>
