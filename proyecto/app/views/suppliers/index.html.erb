<p id="notice"><%= notice %></p>

<h1>Proveedores</h1>
<h2>Import Products</h2>
<%= form_tag import_suppliers_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Naombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.lastname %></td>
        <td><%= supplier.email %></td>
        <td><%= link_to 'Mostrar', supplier %></td>
        <td><%= link_to 'Editar', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Eliminar', supplier, method: :delete, data: { confirm: '¿Estás Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Proveedor', new_supplier_path %>
<%= link_to 'Menú Principal', controller: 'principal' %>
<%= link_to "Generar pdf", "/suppliers.pdf", :format => 'pdf', target: :_blank %>

