
<p id="notice"><%= notice %></p>

<h1>Proveedores</h1>


    <div id="menu-element" class="well-separator">
      
        <div class="row">
        <div align="center">
            <div class="col-sm-4"><label>Buscar</label></div>
            <div class="col-sm-4"><label>Importar Proveedores</label></div>
            <div class="col-sm-4"><label>Exportar Proveedores</label></div>
            </div>
        </div>
   
        <div class="row">
          <div class="col-xs-4">
          
          <div class="form-group bar-search">
            <!--Busqueda de clientes por nombre-->
            <%= hidden_field_tag :direction, params[:search]%>
            <%= hidden_field_tag :sort, params[:sort]%>
            
            <%= form_tag suppliers_path, :method => 'get' do %>
             
                <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Proveedor'  %>
                <span class="loop-icon">
                <span class="add-icon"><%=image_submit_tag("loop2.ico")%></span>
                  <span class="add-icon"><%= link_to image_tag('/assets/advanced.ico'), new_search_supplier_path %></span>
             
                </span>
                
            <% end %>
            </div>
            
          </div>    

          <div class="col-xs-4"> 
            <div  class="right-separator-red" align="center">
              <%= form_tag import_suppliers_path, multipart: true do %>
                
              <span class="btn btn-default active btn-file">
                  Seleccionar Archivo
                  <%= file_field_tag :file %>
              </span>
                <%=image_submit_tag("import.ico")%>
              <% end %>
            </div>
          </div>
          <div class="col-xs-4">
          <div align="center">
            <%= link_to image_tag('/assets/pdf.ico'), "suppliers.pdf", :format => 'pdf', target: :_blank  %>
            <%= link_to image_tag('/assets/excel.ico'), suppliers_path(format: "xls")  %>
            
          </div>
          </div>
        </div>
        
    
</div>


   

<table class="table table-striped table-hover">

 
    <tr>
      <th><%=  sortable "rif", "RIF"%></th>
        <th><%=  sortable "name", "Name"%></th>
        <th><%=  sortable "socialReason", "Razón Social"%></th>
        <th><%=  sortable "email", "Email"%></th>
      <th colspan="3"></th>
    </tr>
 

  <tbody>
    <% @suppliers.each do |supplier| %>
     <tr data-href="<%= edit_supplier_path(supplier) %>">
      
        <td><%= supplier.rif %></td>
        <td><%= supplier.name %></td>
        <td><%= supplier.socialReason %></td>
        <td><%= supplier.email %></td>
        <td><%= link_to image_tag('/assets/showeye.ico'), supplier %></td>
        <td><%= link_to image_tag('/assets/pencil.ico'), edit_supplier_path(supplier) %></td>

        <td><%= link_to image_tag('/assets/delete.ico'), supplier, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>

      </tr>
    <% end %>
    
  </tbody>

</table>

<br>
<%= will_paginate %>

<div ALIGN=right>
<%= link_to 'Nuevo Proveedor', new_supplier_path, :class => 'btn btn-default btn'  %>


</div>