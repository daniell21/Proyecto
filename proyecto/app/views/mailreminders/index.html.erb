<div ALIGN=center>
<p id="notice"><%= notice %></p>

<h1>Listing Mailreminders</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mailreminders.each do |mailreminder| %>
      <tr>
        <td><%= mailreminder.title %></td>
        <td><%= mailreminder.body %></td>
        <td><%= link_to 'Ver', mailreminder %></td>
        <td><%= link_to 'Editar', edit_mailreminder_path(mailreminder) %></td>
        <td><%= link_to 'Eliminar', mailreminder, method: :delete, data: { confirm: '¿Estás Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Recordatorio', new_mailreminder_path %>
<%= link_to 'Menú Principal', controller: 'principal' %>
</div>
