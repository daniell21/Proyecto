

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: { class: 'form-inline' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  
    <%= f.input :email, autofocus: true, placeholder: 'Correo Electrónico', label: false, error: false %>
  </div>
<br>
  <div class="actions">
    <%= f.button :submit, "Restablecer Contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
