
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, html: { class: 'form-inline' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
<br />
    <% if @minimum_password_length %>
      <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
    <% end %>
    <%= f.input :password, autofocus: true, autocomplete: "off", placeholder: 'Contraseña', label: false, error: false  %>
  </div>
<br>
  <div class="field">

    <%= f.input :password_confirmation, autocomplete: "off", placeholder: 'Confirmacion Contraseña', label: false, error: false  %>
  </div>
<br>
  <div class="actions">
    <%= f.button :submit, "Cambiar Contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
