<% if flash[:notice] -%>
  <div class = "alert alert-success"><%= flash[:notice] %></div>
<% end %>
<div class="row center-xs">
  <div class="col-xs-8 col-md-6"></div>
</div>
<div class="box">


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-inline' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">

    <%= f.input :email, autofocus: true, placeholder: 'Correo Electrónico', label: false, error: false  %>
  </div>

  <div class="field">

    <% if @minimum_password_length %>
    <em>(mínimo <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.input :password, autocomplete: "off", placeholder: 'Contraseña', label: false, error: false %>
  </div>
<br>
  <div class="field">

    <%= f.input :password_confirmation, autocomplete: "off", placeholder: 'Confirmacion Contraseña', label: false, error: false  %>
  </div>
<br>
  <div class="actions">
    <%= f.button :submit, "Crear Cuenta" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>