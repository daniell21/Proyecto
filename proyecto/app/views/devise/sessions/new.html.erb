

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-inline' }) do |f| %>
  <div class="field">
    <%= f.input :email, autofocus: true, placeholder: 'Correo Electrónico', :label => "Correo Electrónico", label: false, error: false   %>
  </div>
<br>
  <div class="row-fluid">

    <%= f.input :password, autocomplete: "off", placeholder: 'Contraseña', label: false, error: false %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %> Recuerdame
   
    </div>
  <% end -%>
<br>
  <div class="actions">
    <%= f.button :submit, "Entrar" %>

  </div>
<% end %>

<%= render "devise/shared/links" %>
