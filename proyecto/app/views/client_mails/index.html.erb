<h1>Correos</h1>
 
<table class="table table-striped">
  <thead>
    <tr>
    
    <th>Título</th>
      <th>Mensate</th>
      <th>Destinatario</th>
      

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_mails.each do |client_mail| %>
      <tr>
      
      
        <td><%= client_mail.title %></td>
        <td><%= client_mail.body %></td>
        <td><%= client_mail.destinatary %></td>
        
        <td><%= link_to 'Mostrar', client_mail, :class => 'btn btn-success btn'  %></td>
        <td><%= link_to 'Editar', edit_client_mail_path(client_mail), :class => 'btn btn-warning btn'  %></td>
        <td><%= link_to 'Eliminar', client_mail, method: :delete, data: { confirm: '¿Estas Seguro?' },:class => 'btn btn-danger btn' %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
