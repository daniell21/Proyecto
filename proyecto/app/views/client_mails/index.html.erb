<p id="notice"><%= notice %></p>

<h1>Correos</h1>
 
<table class="table table-striped table-hover">
 
    <tr>
    
    <th>Fecha</th>
      <th>Cliente</th>
   
      <th>Título</th>
      

      <th colspan="3"></th>
    </tr>
  

  <tbody>
    <% @client_mails.each do |client_mail| %>
      <tr>
      
        <td><%= client_mail.date %></td>
        <td><%= (client_mail.client.name) %></td>
        <td><%= client_mail.title %></td>
        <td> <%= link_to image_tag('/assets/showeye.ico'), client_mail %></td>
        <td><%= link_to image_tag('/assets/pencil.ico'), edit_client_mail_path(client_mail) %></td>
        <td><%= link_to image_tag('/assets/delete.ico'), client_mail, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>
