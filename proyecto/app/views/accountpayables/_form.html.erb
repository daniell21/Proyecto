<div ALIGN=center>
<%= simple_form_for(@accountpayable, html: { class: 'form-inline' }) do |f| %>
  
  <div class="field">
  <label>Proveedor</label>
  <%= f.collection_select :supplier_id, Supplier.all, :id, :name %>
</div>
<br>
  <div class="field">
    <label>Descripción</label>
    <%= f.input :descripcion, label: false %>
  </div>
  <br>
  <div class="field">
    <label>Total</label>
    <%= f.input :total, label: false %>
  </div>
  <br>
  </div>
  <div ALIGN=right>
  <div class="actions">
    <%= f.button :submit, "Crear Cuenta"%>  
    <%= link_to 'Atrás', accountpayables_path, :class => 'btn btn-default btn'  %>
  </div>
<% end %>
</div>
