
<p id="notice"><%= notice %></p>

<h1>Cuentas por Pagar</h1>
<div class="row">
      <div class="col-xs-4">
        <!--Busqueda de clientes por nombre-->
        <%= hidden_field_tag :direction, params[:search]%>
        <%= hidden_field_tag :sort, params[:sort]%>
        <label>Nombre</label>
        <%= form_tag accountpayables_path, :method => 'get' do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Buscar Cuenta", :name => nil, :class => 'btn btn-default btn'   %>
          </p>
        <% end %>
      </div>    
    </div>  

<table class="table table-striped">
    <thead>
      <tr>
      </tr>

        <th>Proveedor</th>
        <th><%=  sortable "descripcion", "Descripción"%></th>
        <th><%=  sortable "total", "Total"%></th>
      
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @accountpayables.each do |accountpayable| %>
          <tr>
            <td><%= accountpayable.supplier.name %></td>
            <td><%= accountpayable.descripcion %></td>
            <td><%= accountpayable.total %></td>
            <td><%= link_to 'Mostrar', accountpayable, :class => 'btn btn-success btn'  %></td>
            <td><%= link_to 'Editar', edit_accountpayable_path(accountpayable), :class => 'btn btn-warning btn'  %></td>
            <td><%= link_to 'Eliminar', accountpayable, method: :delete, data: { confirm: '¿Estás Seguro?' }, :class => 'btn btn-danger btn'  %></td>
          </tr>
      <% end %>
      
    </tbody>
</table>
<%= will_paginate %>
<br>
</div>
<div ALIGN=right>
<%= link_to 'Nueva Cuenta', new_accountpayable_path, :class => 'btn btn-default btn'  %>
</div>
