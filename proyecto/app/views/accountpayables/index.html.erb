
<p id="notice"><%= notice %></p>

<h1>Cuentas por Pagar</h1>
          <div id="menu-element" class="well-separator">
      
        <div class="row">
        <div align="center">
            <div class="col-sm-4"><label>Buscar</label></div>
            <div class="col-sm-4"><label>Exportar Cuentas</label></div>
            </div>
        </div>
   
        <div class="row">
          <div class="col-xs-4">
          
          <div class="form-group bar-search">
            <!--Busqueda de clientes por nombre-->
            <%= hidden_field_tag :direction, params[:search]%>
            <%= hidden_field_tag :sort, params[:sort]%>
            
            <%= form_tag accountpayables_path, :method => 'get' do %>
             
                <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Descripcion'  %>
                <span class="loop-icon">
                <span class="add-icon"><%=image_submit_tag("loop2.ico")%></span>
                  <span class="add-icon"><%= link_to image_tag('/assets/advanced.ico'), new_search_accountpayable_path %></span>
             
                </span>
                
            <% end %>
            </div>
            
          </div>    

          
          <div class="col-xs-4">
          <div align="center">
            <%= link_to image_tag('/assets/pdf.ico'), "accountpayables.pdf", :format => 'pdf', target: :_blank  %>
            <%= link_to image_tag('/assets/excel.ico'), accountpayables_path(format: "xls")  %>
            
          </div>
          </div>
        </div>
        
    
</div> 

<table class="table table-striped table-hover">
    
      <tr>
      

        <th>Proveedor</th>
        <th><%=  sortable "descripcion", "Descripción"%></th>
        <th><%=  sortable "amountPaid", "Total"%></th>
      
        <th colspan="3"></th>
      </tr>
   

    <tbody>
      <% @accountpayables.each do |accountpayable| %>
          <tr>
            <td><%= accountpayable.supplier.name %></td>
            <td><%= accountpayable.descripcion %></td>
            <td><%= number_to_currency(accountpayable.amountPaid, unit: "Bs ", separator: ",", delimiter: ".", precision: 2)%></td>
            <td> <%= link_to image_tag('/assets/showeye.ico'), accountpayable %></td>
            <td><%= link_to image_tag('/assets/pencil.ico'), edit_accountpayable_path(accountpayable) %></td>
            <td><%= link_to image_tag('/assets/delete.ico'), accountpayable, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
          </tr>
      <% end %>
      
    </tbody>
</table>
<%= will_paginate %>
<br>
</div>
<div ALIGN=right>
<%= link_to 'Nueva Cuenta', new_accountpayable_path, :class => 'btn btn-default btn'  %>
</div>
