
<%= simple_form_for(@user) do |f| %>
<%= f.error_notification %>

  <div class="row">
    <div class="col-xs-6">
      Usuario <%= f.label :Correo, @user.email %><br>
    </div>
  
    <div class="col-xs-6">
      <%= f.input :role, :collection => [['Administrador','admin'],['Limitado','limited'],['Restringido','restricted'], ['Cliente', 'client']], label: "Rol" %>
    </div>
  </div>

  <br>
  <div ALIGN=right>
   <div class="actions">
    <%= f.button :submit, "Modificar Rol"%>  
  </div>
  </div>
<% end %>

