
<p id="notice"><%= notice %></p>

<h1>Usuarios</h1>
<div class="row">
<div class="col-xs-4">
        <!--Busqueda de clientes por nombre-->
        <%= hidden_field_tag :direction, params[:search]%>
        <%= hidden_field_tag :sort, params[:sort]%>
        <label>Nombre</label>
        <%= form_tag users_path, :method => 'get' do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Buscar Usuario", :name => nil, :class => 'btn btn-default btn'   %>
          </p>
        <% end %>
      </div>    
    </div> 
  <table>
    <table class="table table-striped">
      <tr>
        <th>Correo</th>
        <th>Rol</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'Mostrar', user, :class => 'btn btn-success btn' %></td>
          <td><%= link_to 'Editar', edit_user_path(user), :class => 'btn btn-warning btn' %></td>
          <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: '¿Estás Seguro?' }, :class => 'btn btn-danger btn'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate %>

